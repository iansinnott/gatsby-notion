{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "rootDir": "./src",
    "noImplicitAny": false,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2017",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}